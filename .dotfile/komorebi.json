{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.30/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "bar_configurations": [
    "$Env:USERPROFILE/komorebi.bar.monitor1.json",
    "$Env:USERPROFILE/komorebi.bar.monitor2.json"
  ],
  "animation": {
    "enabled": true,
    "style": "EaseOutQuint",
    "duration": 300,
    "fps": 180
  },
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Swap",
  "mouse_follows_focus": false,
  "focus_follows_mouse": "Windows",
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "border_implementation": "Windows",
  "border_style": "Rounded",
  "border_z_order": "TopMost",
  "unmanaged_window_operation_behaviour": "NoOp",
  "border_colours": {
    "single": "#53bdfa",
    "stack": "#aad94c",
    "monocle": "#ffb454",
    "unfocused": "#0d1017",
    "floating": "#aad94c"
  },
  "transparency": true,
  "transparency_alpha": 230,
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#aad94c",
      "unfocused_text": "#bfbdb6",
      "background": "#0d1017"
    }
  },
  "float_rules": [
    {
      "kind": "Exe",
      "id": "vsthost.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "javaw.exe",
      "matching_strategy": "Equals"
    }
  ],
  "tray_and_multi_window_applications": [
    {
      "kind": "Class",
      "id": "SDL_app",
      "matching_strategy": "Equals"
    }
  ],
  "manage_rules": [
    {
      "kind": "Title",
      "id": "Task Manager",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Zalo.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Code.exe",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "Grid"
        },
        {
          "name": "2",
          "layout": "Grid"
        },
        {
          "name": "3",
          "layout": "Grid"
        },
        {
          "name": "4",
          "layout": "Grid"
        },
        {
          "name": "5",
          "layout": "Grid"
        },
        {
          "name": "6",
          "layout": "Grid"
        },
        {
          "name": "7",
          "layout": "Grid"
        },
        {
          "name": "8",
          "layout": "Grid"
        },
        {
          "name": "9",
          "layout": "Grid"
        },
        {
          "name": "0",
          "layout": "Grid"
        }
      ]
    }
  ]
}
